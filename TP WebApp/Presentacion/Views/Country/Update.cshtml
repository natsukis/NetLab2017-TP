@model Services.CountryModel

<script src="~/Scripts/Validations.js"></script>

<form action="/country/update" method="post">
    <div>
        <label>Id</label>
        <input type="text" name="ID" value="@Model.ID" readonly />
    </div>
    <div>
        <label>Country Name</label>
        <input type="text" name="CountryName" value="@Model.CountryName" onkeypress="return soloLetras(event)" required />
    </div>
    <div>
        <button type="submit">Save</button>
    </div>
</form>