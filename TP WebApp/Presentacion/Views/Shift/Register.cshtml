@model List<Services.Models.ShiftModel>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">

        <form action="/shift/register" method="post">
            <div class="form-group">
                <label for="registerID">Turn:</label>
                <select class="form-control" name="registerID" value="1">
                    @foreach (var turn in this.Model)
                    {
                        <option value="@turn.ID">@turn.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>

    </div>
    <div class="col-sm-2"></div>
</div>